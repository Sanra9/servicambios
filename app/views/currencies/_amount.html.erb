<div class='modal fade'>
 <div class="modal-dialog">
   <div class="modal-content">
       <%= form_for @currency, remote: true do |currency|%>
         <div class="modal-body">
           <div class='form-group'>
             <%=currency.label :name, class:'form-control'%>
           </div>
           <div class='form-group'>
             <%=currency.label :price_buy, class:'form-control'%>
           </div>
           <div class='form-group'>
             <%=currency.label :sale, class:'form-control'%>
           </div>
           <div class='form-group'>
             <%=currency.label :available, class:'form-control'%>
           </div>
           <div class='form-group'>
             <%=currency.label :country, class:'form-control'%>
           </div>
           </div>
         <%end%>
   </div>
 </div>
</div>