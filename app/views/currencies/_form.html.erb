<div class='container'>
    <div class='row'>
        <div class='col-sm-6 col-sm-offset-3'>
          <h1> <%= form_title %></h1>
                <% if @currency.errors.any? %>
                    <div class="alert alert-danger">
                    <ul>
                    <% @currency.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                    </ul>
                    </div>
                 <% end %>
            <%= form_for @currency do |f| %>
                <div class='form-group'>
                    <%= f.text_field :name, class: 'form-control input-lg', placeholder:'Name Currency'%>
                </div>
                <div class='form-group'>
                    <%= f.number_field :price_buy, class: 'form-control input-lg', placeholder: 'Price Buy', step: :any %>
                </div>
                <div class='form-group'>
                    <%= f.number_field :price_sale, class: 'form-control input-lg', placeholder: 'Price Sale', step: :any %>
                </div>
                <div class='form-group'>
                    <p>Country Flag:  <%= f.country_select :country%></p>
                </div>
                <div class='form-group'>
                    <p>Position Table:   <%= f.select :position, (1..10)%> </p>
                </div>
                <div class='form-check'>
                    <p>Disponible?</p>
                    <%= label :available, 'Si', :value => true%>
                    <%= f.radio_button :available, true, :checked => true %>
                    <%= label :available, 'No', :value => false%>
                    <%= f.radio_button :available, false%>     
                </div>
                <div>
                <br>
                <%= f.submit form_title, class: 'btn btn-primary btn-lg btn-block'%>
                </div>
            <% end %>
        </div>
    </div>
</div>