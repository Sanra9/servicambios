<img src='/SERVICAMBIOS_AVISO.jpg' alt='image Home'style="width:100%;height:auto;"><br><br><br><br>
<div class="p-3 mb-2 bg-primary text-white">.bg-primary</div>

    <div class="col-12 col-md-9">
      <div id="currencyCarousel" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <% @currencies.each do |currency| %>
              <li data-target="#currencyCarousel" data-slide-to="<%currency.position%>"></li>
            <% end  %>
          </ol>
          <div class="carousel-inner">
            <% @currencies.each do |currency| %>
              <div class="item">
                    <div class="p-3 mb-2 bg-primary text-white">.bg-primary
                  <h5><%= currency.name %></h5>
                  </div>
                <div class="carousel-content">
                <tr>
                  <th><span class="flag-icon flag-icon-<%=currency.country.downcase%>"></span>  <%= currency.name %> </th>
                  <th><%= currency.price_buy %></th>
                  <th><%= currency.price_sale %></th>
                </tr>
                </div>

              </div>
            <% end %>
          </div>
      </div>
      <a class="left carousel-control" href="#currencyCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#currencyCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div><br><br>



<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h1>Currencies To Change ~ Monedas Para Cambiar</h1></br>
        </div>
            <div class='col-sm-8 col-sm-offset-2'>
            <table class='table table-striped table-lg'>
                <thead>
                    <tr class="info">
                        <th>Currency <br/ >Modena</th>
                        <th>Price Buy<br/ >Precio Compra</th>
                        <th>Price Sale <br/ >Precio Venta</th>
                        <th>Country <br/ >Pais</th>
                        <th>Available <br/ >Disponible</th>
                    </tr>
                </thead>
                <tbody>
                    <% @currencies.each do |currency| %>

                        <% if currency.available? %>
                             <tr class='success'>
                        <% else %>
                             <tr class='danger'>
                        <% end %>
                        <% if user_signed_in? %>
                            <th>
                                <span class="flag-icon flag-icon-<%=currency.country.downcase%>"></span> <%= link_to currency.name, edit_currency_path(currency) %><br>
                                <%= link_to 'Delete Currency', currency, method: :delete, class: 'btn btn-danger btn-xs', data: {confirm: 'Â¿Are you sure you want to eliminate the currency?'} %>
                            </th>
                        <% else %>
                            <th>
                                <span class="flag-icon flag-icon-<%=currency.country.downcase%>"></span> <%= currency.name %>
                            </th>
                        <% end %>
                            <th><%= currency.price_buy %></th>
                            <th><%= currency.price_sale %></th>
                            <th align="center"><%= currency.country %> </th>
                        <% if currency.available? %>
                            <th align="center"><span class="glyphicon glyphicon-ok" aria-hidden="true"></span></th>
                        <% else %>
                            <th align="center"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></th>
                        <% end %>
                            </tr>
                        <% end %>
                <tbody>
                </table>
                    <% if user_signed_in?%>
                        <div class='text-right'>
                         <%= link_to 'Add Currency', new_currency_path, class: 'btn btn-primary'%>
                        </div>
                    <% end %>
            </div>
    </div>
</div>
